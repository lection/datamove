<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
		  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
    <bean id="taskList" class="core.TaskList">
        <property name="taskList">
            <list>
                <!--<ref bean="userTask"/>-->
                <!--<ref bean="hotlineTask"/>-->
                <!--<ref bean="mediaPlanTask"/>-->
                <!--<ref bean="campaignTask"/>-->
                <!--<ref bean="ibCallTask"/>-->
                <ref bean="leadsTask"/>
            </list>
        </property>
    </bean>
    <!--用户-->
    <bean id="userTask" class="task.scae.SaleUserTask" autowire="byName">
        <property name="saver" ref="userSaver"/>
        <property name="parent_name" value="上海销售服务中心"/>
        <property name="sql" value="select user.*,org.dcenter_name from scae_dcentersales user,scae_dcenter org where user.dcenter_id in (6,31,9,29,2,30,35,4,28,7,32) and user.dcenter_id=org.id"/>
    </bean>
    <bean id="hotlineTask" class="task.scae.HotlineTask" autowire="byName">
        <property name="saver" ref="hotlineSaver"/>
        <property name="sql">
            <value>
                select line.*
                from scae_dcenterhotline line
                where line.dcenter_id in (6,31,9,29,2,30,35,4,28,7,32)
            </value>
        </property>
    </bean>
    <bean id="mediaPlanTask" class="task.scae.MediaPlanTask" autowire="byName">
        <property name="sql">
            <value>
               select m.* from scae_campaignmedia m,scae_campaign c
               where m.campaign_id=c.id and c.dcenter_id in (6,31,9,29,2,30,35,4,28,7,32)
            </value>
        </property>
        <property name="saver" ref="mediaPlanSaver"/>
    </bean>
    <bean id="campaignTask" class="task.scae.CampaignTask" autowire="byName">
        <property name="sql">
            <value>
                select c.*,obj.obj,obj.carmodel_id
                from scae_campaign as c left outer join scae_campaignobj as obj on c.id=obj.campaign_id
                where c.dcenter_id in (6,31,9,29,2,30,35,4,28,7,32)
                order by c.id
            </value>
        </property>
        <property name="saver" ref="campaignSaver"/>
    </bean>
    <bean id="ibCallTask" class="task.scae.IBCallTask" autowire="byName">
        <property name="sql" value="select ib.* from scae_ibcall ib"/>
        <property name="saver" ref="ibCallSaver"/>
    </bean>
    <!--客户档案 注意：在SCAE地址表中加入id为0名称为其他的字段，与未收集地址信息的进行匹配-->
    <bean id="leadsTask" class="scae.task.LeadsTask" autowire="byName">
        <property name="sql">
            <value>
                select card.*,center.dcenter_name
                from scae_yellowcard card
                where card.dcenter_id in (6,31,9,29,2,30,35,4,28,7,32)
            </value>
        </property>
    </bean>
</beans>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
		  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
    <bean id="taskList" class="core.TaskList">
        <property name="taskList">
            <list>
                <!--<ref bean="userTask"/>-->
                <!--<ref bean="hotlineTask"/>-->
            </list>
        </property>
    </bean>
    <!--用户-->
    <bean id="userTask" class="task.scae.SaleUserTask" autowire="byName">
        <property name="saver" ref="userSaver"/>
        <property name="parent_name" value="上海销售服务中心"/>
        <property name="sql" value="select user.*,org.dcenter_name from scae_dcentersales user,scae_dcenter org where user.dcenter_id in (6,31,9,29,2,30,35,4,28,7,32) and user.dcenter_id=org.id"/>
    </bean>
    <bean id="hotlineTask" class="task.scae.HotlineTask" autowire="byName">
        <property name="saver" ref="hotlineSaver"/>
        <property name="sql">
            <value>
                select line.*
                from scae_dcenterhotline line
                where line.dcenter_id in (6,31,9,29,2,30,35,4,28,7,32)
            </value>
        </property>
    </bean>
    <bean id="mediaPlanTask" class="task.scae.MediaPlanTask" autowire="byName">
        <property name="sql" value="select m.* from scae_campaignmedia m"/>
    </bean>
</beans>